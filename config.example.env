# Base URL to scrape
BASE_URL=https://www.nepremicnine.net/

# Listing selectors (override if needed)
LISTING_CARD_SELECTOR=.property-box, .oglas_container, article
LISTING_LINK_SELECTOR=a.url-title-d, a.url-title-m, a[href]
LISTING_TITLE_SELECTOR=a.url-title-d h2, a.url-title-m h2, h2, h3, .title
LISTING_PRICE_SELECTOR=meta[itemprop=price], .price, h6
LISTING_LOCATION_SELECTOR=.location, .lokacija, .property-location, .property-details .location

# Set to "1" to use Playwright (helps with CF bot detection)
USE_PLAYWRIGHT=0

# Notification mode: "stdout" or "smtp"
NOTIFY_MODE=stdout

# SMTP settings (only used when NOTIFY_MODE=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_TO=
